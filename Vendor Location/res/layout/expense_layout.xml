<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="#f8f9fe"
    tools:context=".expense_layout" >

   <include
        android:id="@+id/include1"
        layout="@layout/actionbar_layout" />

   <EditText
       android:id="@+id/editText1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/textView3"
       android:layout_toRightOf="@+id/textView3"
       android:ems="10"
       android:inputType="numberDecimal" >

       <requestFocus />
   </EditText>

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/textView3"
       android:layout_centerVertical="true"
       android:textColor="#4863A0"
       android:textStyle="bold"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <TextView
       android:id="@+id/mydata2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/include1"
       android:layout_marginLeft="21dp"
       android:layout_toRightOf="@+id/textView5"
       android:text=""
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textColor="#4863A0"
       android:textStyle="bold" />

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/textView4"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="18dp"
       android:text="Add Expense"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textColor="#4863A0"
       android:textStyle="bold" />

   <Spinner
       android:id="@+id/spinner1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/editText1"
       android:layout_below="@+id/textView4"
       android:layout_marginTop="16dp"
       
       android:textColor="#4863A0"
       android:textStyle="bold" />

   <Button
       android:id="@+id/btn_addExpense"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="37dp"
       android:text="Add My Expenses"
       android:background="#4863A0"
       android:textColor="#ffffff"
       android:textStyle="bold" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/textView4"
       android:layout_alignTop="@+id/spinner1"
       android:text="Field Name"
       android:textColor="#4863A0"
       android:textStyle="bold"
       android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
       android:id="@+id/editText2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/mydata2"
       android:layout_toRightOf="@+id/mydata2"
       android:ems="10"
       android:inputType="number"
       android:textColor="#4863A0"
       android:textStyle="bold" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/editText2"
       android:layout_alignBottom="@+id/editText2"
       android:layout_alignParentLeft="true"
       android:text="Available Balance"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textColor="#4863A0"
       android:textStyle="bold" />

 </RelativeLayout>
 